#!/bin/bash

NAME=`basename $0`
PIDFILE=${PID_DIR}/${NAME}.pid
SCRIPTNAME=/etc/init.d/${NAME}
MONITOR_PORT=9801

LOCAL_PORT=9001
LOCAL_HOST=localhost
REMOTE_PORT=9001

REMOTE_USER=root
REMOTE_HOST=kurohai.com

export AUTOSSH_PORT=${MONITOR_PORT}
export AUTOSSH_PIDFILE=${PIDFILE}
export AUTOSSH_LOGLEVEL=7
export AUTOSSH_LOGFILE=${LOG_DIR}/${NAME}.log

/usr/lib/autossh/autossh -M ${MONITOR_PORT} -f -i ${RSA_KEY} -nNTfR ${LOCAL_PORT}:${LOCAL_HOST}:${REMOTE_PORT} ${REMOTE_USER}@${REMOTE_HOST}
