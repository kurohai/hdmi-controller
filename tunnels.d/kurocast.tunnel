#!/bin/bash

NAME=`basename $0`
PIDFILE=${PID_DIR}/${NAME}.pid
SCRIPTNAME=/etc/init.d/${NAME}
MONITOR_PORT=9805

LOCAL_PORT=9003
REMOTE_PORT=9003

export AUTOSSH_PORT=${MONITOR_PORT}
export AUTOSSH_PIDFILE=${PIDFILE}
export AUTOSSH_LOGLEVEL=7
export AUTOSSH_LOGFILE=${LOG_DIR}/${NAME}.log

/usr/lib/autossh/autossh -M ${MONITOR_PORT} -f -i ${RSA_KEY} -nNTfR ${LOCAL_PORT}:localhost:${REMOTE_PORT}  root@kurohai.com
